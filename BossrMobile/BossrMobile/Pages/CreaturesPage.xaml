<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BossrMobile.Pages.CreaturesPage"
             Title="Creatures">
  <ListView ItemsSource="{Binding Creatures}" SeparatorVisibility="None" ItemTapped="ListView_OnItemTapped" Refreshing="ListView_OnRefreshing" IsPullToRefreshEnabled="True" IsRefreshing="{Binding IsLoading}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>